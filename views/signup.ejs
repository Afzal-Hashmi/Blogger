<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Signup</title>
    <%- include('./partials/header') %>
  </head>
  <body
    class="p-3 mb-2 bg-dark bg-gradient text-dark-emphasis"
    style="height: 100vh"
  >
    <%- include('./partials/nav') %>
    <div class="container mt-5">
      <h1 style="color: rgb(187, 187, 187)">Signup</h1>
      <form action="/user/signup" method="post">
        <div class="mb-3">
          <div class="form-floating">
            <input
              type="text"
              class="form-control"
              id="fullName"
              name="fullName"
              aria-describedby="fullName"
            />
            <label for="floatingTextarea2">Fullname:</label>
          </div>
        </div>
        <div class="mb-3">
          <div class="form-floating">
            <input
              type="email"
              class="form-control"
              id="Email"
              name="Email"
              aria-describedby="Email"
              required
            />
            <label for="floatingTextarea2">Email:</label>
          </div>
          <div
            id="emailHelp"
            class="form-text"
            style="color: rgb(187, 187, 187)"
          >
            We'll never share your email with anyone else.
          </div>
        </div>

        <div class="mb-3">
          <div class="form-floating">
            <input
              type="password"
              class="form-control"
              id="Password"
              name="Password"
            />
            <label for="floatingTextarea2">Password:</label>
          </div>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <%- include('./partials/scripts') %>
  </body>
</html>
